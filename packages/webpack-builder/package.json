{
  "name": "@reactway/webpack-builder",
  "version": "1.0.0-alpha.7",
  "description": "A tool to create webpack config easier using plugins.",
  "keywords": [
    "webpack",
    "webpack-builder",
    "config",
    "plugins",
    "tool",
    "reactway"
  ],
  "authors": [
    "Martynas Žilinskas <martynas@quatrodev.com> (https://github.com/MartynasZilinskas)",
    "Dovydas Navickas <dovydas@quatrodev.com> (https://github.com/DovydasNavickas)",
    "Eimantas Dumšė <eimantas@quatrodev.com> (https://github.com/EimantasDumse)"
  ],
  "repository": "github:reactway/webpack-builder",
  "bugs": "https://github.com/reactway/webpack-builder/issues",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -p . -w",
    "pretest": "tsc -p . --noEmit && tslint -p .",
    "test": "jest"
  },
  "files": [
    "dist",
    "**/*.md"
  ],
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx)$",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/__tests__/*",
      "!src/index.ts"
    ],
    "coverageReporters": [
      "cobertura",
      "istanbul-azure-reporter"
    ]
  },
  "dependencies": {
    "tslib": "^1.9.3",
    "webpack": "^4.29.6",
    "upath": "^1.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.6",
    "@types/webpack": "^4.4.26",
    "istanbul-azure-reporter": "^0.1.4",
    "jest": "^24.5.0",
    "jest-junit": "^6.3.0",
    "simplr-tslint": "^1.0.0-alpha.14",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.3.3333"
  }
}
