{
  "name": "@reactway/webpack-builder-plugin-styles",
  "version": "1.0.0-alpha.7",
  "description": "A plugin made for webpack-builder.",
  "keywords": [
    "webpack",
    "webpack-builder",
    "reactway",
    "plugin",
    "styles"
  ],
  "authors": [
    "Martynas Žilinskas <martynas@quatrodev.com> (https://github.com/MartynasZilinskas)",
    "Dovydas Navickas <dovydas@quatrodev.com> (https://github.com/DovydasNavickas)",
    "Eimantas Dumšė <eimantas@quatrodev.com> (https://github.com/EimantasDumse)"
  ],
  "repository": "github:reactway/webpack-builder",
  "bugs": "https://github.com/reactway/webpack-builder/issues",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -p . -w",
    "pretest": "tsc -p . --noEmit && tslint -p .",
    "test": "jest"
  },
  "files": [
    "dist",
    "**/*.md"
  ],
  "dependencies": {
    "@reactway/webpack-builder": "1.0.0-alpha.7",
    "fs-extra": "^7.0.1",
    "tslib": "^1.9.3",
    "upath": "^1.1.2",
    "style-loader": "^0.23.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "css-loader": "^2.1.1",
    "url-loader": "^1.1.2",
    "file-loader": "^3.0.1",
    "autoprefixer": "^9.5.0"
  },
  "devDependencies": {
    "@types/node": "^11.11.6",
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.11",
    "@types/webpack": "^4.4.26",
    "istanbul-azure-reporter": "^0.1.4",
    "jest": "^24.5.0",
    "jest-junit": "^6.3.0",
    "node-sass": "^4.11.0",
    "simplr-tslint": "^1.0.0-alpha.14",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.3.3333"
  },
  "peerDependencies": {
    "node-sass": "^4.11.0"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx)$",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/__tests__/*",
      "!src/index.ts"
    ],
    "coverageReporters": [
      "cobertura",
      "istanbul-azure-reporter"
    ]
  }
}
