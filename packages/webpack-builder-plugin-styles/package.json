{
    "name": "@reactway/webpack-builder-plugin-styles",
    "version": "2.0.1",
    "description": "A plugin made for webpack-builder.",
    "keywords": [
        "webpack",
        "webpack-builder",
        "reactway",
        "plugin",
        "styles"
    ],
    "authors": [
        "Martynas Žilinskas <martynas@quatrodev.com> (https://github.com/MartynasZilinskas)",
        "Dovydas Navickas <dovydas@quatrodev.com> (https://github.com/DovydasNavickas)",
        "Eimantas Dumšė <eimantas@quatrodev.com> (https://github.com/EimantasDumse)"
    ],
    "repository": "github:reactway/webpack-builder",
    "bugs": "https://github.com/reactway/webpack-builder/issues",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -p .",
        "watch": "tsc -p . -w",
        "pretest": "tsc -p . --noEmit && tslint -p .",
        "test": "jest"
    },
    "files": [
        "dist",
        "**/*.md"
    ],
    "dependencies": {
        "@reactway/webpack-builder": "^2.0.1",
        "autoprefixer": "^9.5.0",
        "css-loader": "^2.1.1",
        "file-loader": "^3.0.1",
        "fs-extra": "^8.0.1",
        "mini-css-extract-plugin": "^0.6.0",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "postcss-loader": "^3.0.0",
        "query-string": "^6.5.0",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "tslib": "^1.9.3",
        "upath": "^1.1.2",
        "url-loader": "^1.1.2",
        "fibers": "^4.0.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^7.0.0",
        "@types/jest": "^24.0.11",
        "@types/mini-css-extract-plugin": "^0.2.0",
        "@types/node": "^12.0.2",
        "@types/optimize-css-assets-webpack-plugin": "^1.3.4",
        "@types/webpack": "^4.4.31",
        "istanbul-azure-reporter": "^0.1.4",
        "jest": "^24.5.0",
        "jest-junit": "^6.3.0",
        "sass": "^1.23.6",
        "simplr-tslint": "^1.0.0-alpha.14",
        "ts-jest": "^24.0.0",
        "tslint": "^5.14.0",
        "tslint-language-service": "^0.9.9",
        "typescript": "^3.7.2",
        "webpack": "^4.31.0"
    },
    "peerDependencies": {
        "sass": "^1.23.6"
    },
    "jest": {
        "verbose": true,
        "preset": "ts-jest",
        "reporters": [
            "default",
            "jest-junit"
        ],
        "collectCoverage": true,
        "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx)$",
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/__tests__/*",
            "!src/index.ts"
        ],
        "coverageReporters": [
            "cobertura",
            "istanbul-azure-reporter"
        ]
    }
}
