{
    "name": "@reactway/webpack-builder-plugin-typescript",
    "version": "1.0.0-alpha",
    "description": "",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -p .",
        "watch": "tsc -p . -w",
