{
  "name": "@reactway/webpack-builder-plugin-typescript",
  "version": "2.0.3",
  "description": "A plugin made for webpack-builder.",
  "keywords": [
    "webpack",
    "webpack-builder",
    "reactway",
    "plugin",
    "typescript"
  ],
  "authors": [
    "Martynas Žilinskas <martynas@quatrodev.com> (https://github.com/MartynasZilinskas)",
    "Dovydas Navickas <dovydas@quatrodev.com> (https://github.com/DovydasNavickas)",
    "Eimantas Dumšė <eimantas@quatrodev.com> (https://github.com/EimantasDumse)"
  ],
  "repository": "github:reactway/webpack-builder",
  "bugs": "https://github.com/reactway/webpack-builder/issues",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -p . -w",
    "pretest": "tsc -p . --noEmit && tslint -p .",
    "test": "jest"
  },
  "files": [
    "dist",
    "**/*.md"
  ],
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@reactway/webpack-builder": "2.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "fork-ts-checker-webpack-plugin": "^3.1.0",
    "fs-extra": "^8.1.0",
    "tapable": "^1.1.3",
    "terser-webpack-plugin": "^2.2.1",
    "ts-loader": "^6.2.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslib": "^1.10.0",
    "upath": "^1.2.0",
    "webpack": "^4.41.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.12",
    "@types/tapable": "1.0.4",
    "@types/terser-webpack-plugin": "^2.2.0",
    "@types/webpack": "^4.41.0",
    "istanbul-azure-reporter": "^0.1.4",
    "jest": "^24.9.0",
    "jest-junit": "^9.0.0",
    "simplr-tslint": "^1.0.0-alpha.14",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.7.2"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx)$",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/__tests__/*",
      "!src/index.ts"
    ],
    "coverageReporters": [
      "cobertura",
      "istanbul-azure-reporter"
    ]
  }
}
