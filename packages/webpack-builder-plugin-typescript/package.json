        "fs-extra": "^7.0.1",
        "tsconfig-paths": "^3.8.0",
        "tapable": "^1.1.1",
        "ts-loader": "^5.3.3",
        "babel-core": "^6.26.3",
        "babel-loader": "^8.0.5",
        "babel-plugin-syntax-dynamic-import": "^6.18.0",
        "tslib": "^1.9.3",
        "upath": "^1.1.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^5.0.5",
        "@types/jest": "^24.0.11",
        "@types/node": "^11.11.3",
        "@types/tapable": "1.0.4",
        "istanbul-azure-reporter": "^0.1.4",
        "jest": "^24.5.0",
